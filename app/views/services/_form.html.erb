<%= form_with(model: service, id: dom_id(service)) do |form| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service.errors.count, "error") %> Impidi√≥ que se creara el servicio</h2>

      <ul>
        <% service.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3 expanded">

    <div class="form-group">
      <%= form.label :Servicio, class: '' %>
      <%= form.text_field :title, class: 'bg-dark form-control', placeholder: 'Solicite un Servicio' %>
      <small id="helpId" class="text-muted">Ingrese el Servicio Requerido de Botones</small>
    </div>

    <div class="actions">
      <%= form.submit "Enviar", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
